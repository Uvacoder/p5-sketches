{
  "compilerOptions": {
    "target": "es5",
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "./build/build.js",
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "none",
    "allowJs": true
  },
  "include": [
    "src/global.d.ts",
    "src/constants/**/*",
    "src/interfaces/**/*",
    "src/types/**/*",
    "src/tools/**/*",
    "src/studies/**/*",
    "src/sketches/**/*",
    "src/index.ts"
  ]
}
